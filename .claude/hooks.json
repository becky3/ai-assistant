{
  "hooks": {
    "user-prompt-submit": {
      "command": ".claude/scripts/notify.sh",
      "args": ["確認が必要です", "Claude Codeが承認を待っています"]
    },
    "task-completed": {
      "command": ".claude/scripts/notify.sh",
      "args": ["タスク完了", "Claude Codeがタスクを完了しました"]
    },
    "tool-call-approved": {
      "command": ".claude/scripts/notify.sh",
      "args": ["ツール実行", "{{tool_name}} を実行中"]
    }
  }
}
